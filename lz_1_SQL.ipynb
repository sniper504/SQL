CREATE DATABASE LZ1;
USE LZ1



CREATE TABLE STUDENTS (
    ID INT NOT NULL PRIMARY KEY IDENTITY(1,1),
    FIRST_NAME CHAR(20) NOT NULL,
    LAST_NAME CHAR(20) NOT NULL,
    MIDDLE_NAME CHAR(20),
    BIRTHDATE DATE NOT NULL,
    GROUP_ID INT NOT NULL
);

CREATE TABLE GROUPS (
ID INT NOT NULL PRIMARY KEY IDENTITY(1,1),
NAME CHAR(10) NOT NULL,
COURSE INT NOT NULL
);

CREATE TABLE [PLAN] (
    GROUP_ID INT NOT NULL,
    SUBJECT_ID INT NOT NULL,
    PRIMARY KEY (GROUP_ID, SUBJECT_ID)
);

CREATE TABLE SUBJECTS (
    ID INT NOT NULL PRIMARY KEY IDENTITY(1,1),
    SUBJECT_NAME CHAR(50) NOT NULL,
    HOURS INT NOT NULL
);

ALTER TABLE STUDENTS
ADD CONSTRAINT FK_GROUP_TO_STUDENTS FOREIGN KEY (GROUP_ID) REFERENCES GROUPS(ID);

ALTER TABLE [PLAN]
ADD CONSTRAINT FK_GROUP_TO_PLAN FOREIGN KEY (GROUP_ID) REFERENCES GROUPS(ID);

ALTER TABLE [PLAN]
ADD CONSTRAINT FK_SUBJECT_TO_PLAN FOREIGN KEY (SUBJECT_ID) REFERENCES SUBJECTS(ID);

